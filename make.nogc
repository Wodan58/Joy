.POSIX:
.SUFFIXES:

CC = gcc
CFLAGS = -DNOBDW -O3 -Wall -Wextra -Wno-unused-parameter -Werror
LDLIBS = -static -lm
OBJECTS = interp.o scan.o utils.o main.o srand.o rand.o gc.o

joy: $(OBJECTS)
	$(CC) -o$@ $(OBJECTS) $(LDLIBS)

$(OBJECTS): globals.h

clean:
	rm -f joy *.o

.SUFFIXES: .c .o

.c.o:
	$(CC) $(CFLAGS) -c $<
